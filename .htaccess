<IfModule mod_rewrite.c>
    RewriteEngine On

    # Allow favicon
    RewriteRule ^favicon\.ico$ - [L]

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [QSA,L]
</IfModule>

<Files "*.json">
    Require all denied
</Files>

ErrorDocument 403 "Unauthorized access"
